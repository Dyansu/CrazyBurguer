<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="ComidaApp.Views.SideMenuFlyoutPage"
             Title="Menú"
             BackgroundColor="Red">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Perfil del Usuario" FontAttributes="Bold" FontSize="Medium" TextColor="White" />
            <Button Text="Mi cuenta" TextColor="White" BackgroundColor="Red" BorderColor="Black" BorderWidth="1" />
            <Button Text="Mis favoritos" TextColor="White" BackgroundColor="Red" BorderColor="Black" BorderWidth="1" />
            <Button Text="Mis direcciones" TextColor="White" BackgroundColor="Red" BorderColor="Black" BorderWidth="1" />
            <Button Text="Mis pedidos" TextColor="White" BackgroundColor="Red" BorderColor="Black" BorderWidth="1" />
            <Button Text="Cerrar" Clicked="OnCerrarClicked" TextColor="White" BackgroundColor="Black" />
        </StackLayout>
    </ScrollView>
</ContentPage>
