<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrazyBurguer.Login">
    <Grid RowDefinitions="200, *, Auto"
          Padding="20">
        <!-- Sección superior con fondo rojo -->
        <StackLayout Grid.Row="0"
                     BackgroundColor="#E84C3D"
                     HeightRequest="200">
            <Image Source="background_pattern.png"
                   Aspect="AspectFill"
                   Opacity="0.3" />
            <Image Source="crazy_burger_logo.png"
                   WidthRequest="120"
                   HeightRequest="120"
                   HorizontalOptions="Center"
                   Margin="0,-60,0,0" />
        </StackLayout>
        <!-- Formulario -->
        <StackLayout Grid.Row="1"
                     Spacing="15">
            <!-- Titulo -->
            <Label Text="Inicia Sesión para más sabor"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#E84C3D"
                   HorizontalOptions="Center" />
            <!-- Campo de correo -->
            <Label Text="Ingrese su correo"
                   FontSize="16"
                   TextColor="Black" />
            <Frame BorderColor="Gray"
                   CornerRadius="10">
                <StackLayout Orientation="Horizontal"
                             Padding="10">
                    <Image Source="icon_user.png"
                           WidthRequest="20"
                           HeightRequest="20" />
                    <Entry TextColor="Black" />
                </StackLayout>
            </Frame>
            
            <!-- Campo de contraseña -->
            <Label Text="Ingrese su contraseña"
                   FontSize="16"
                   TextColor="Black" />
            <Frame BorderColor="Gray"
                   CornerRadius="10">
                <StackLayout Orientation="Horizontal"
                             Padding="10">
                    <Image Source="icon_lock.png"
                           WidthRequest="20"
                           HeightRequest="20" />
                    <Entry IsPassword="True"
                           TextColor="Black" />
                </StackLayout>
            </Frame>
            
            <!-- Enlace para registro -->
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center">
                <Label Text="¿No tienes una cuenta?"
                       TextColor="Black" />
                <Label Text=" Crea una"
                       TextColor="Blue"
                       FontAttributes="Bold" />
            </StackLayout>
        </StackLayout>
        
        <!-- Botón de inicio -->
        <Button Grid.Row="2"
                Text="Iniciar"
                BackgroundColor="#E84C3D"
                TextColor="White"
                CornerRadius="10"
                FontAttributes="Bold"
                HeightRequest="50" />
    </Grid>
</ContentPage>